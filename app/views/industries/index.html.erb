<div class="box">

    
        <h1>Industries</h1>


      
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Number of categories</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @industries.each do |industry| %>
              <tr>
                <td><%= industry.name %></td>
                <td><%= industry.categories.count %></td>

                <td><%= link_to 'View', industry, class: "btn btn-default" if policy(industry).show? %>

               <%= link_to 'Edit', edit_industry_path(industry), class: "btn btn-default" if policy(industry).update? %>

                <%= link_to 'Delete', industry, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  if policy(industry).destroy? %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      

    <br>


    <% if user_signed_in? %>
      <% if policy(Industry).new? %>
      <%= link_to 'New Industry', new_industry_path, class: "btn btn-primary" %>
      <% else %>
       <a href="mailto:alex@kehaya.com">Want to add your industry? Contact me for access.</a>
       <% end%>

    <% else %>
       <a href="mailto:alex@kehaya.com">Want to add your industry? Contact me for access.</a>
    <% end %>
   
</div>
