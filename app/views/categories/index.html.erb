<div class="panel panel-default">
    <div class="panel-heading">
      <h1>Outdoor Startup Categories</h1>
  </div>
    <div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Number of startups</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= category.startups.count %></td>
                <td><%= link_to 'Show', category, class: "btn btn-default" %>
                <%= link_to 'Edit', edit_category_path(category), class: "btn btn-default" %>
                <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    <br>

<% if user_signed_in? %>
  <div class="panel-footer">
    <%= link_to 'New Category', new_category_path, class: "btn btn-primary" %>
  </div>
  <% end %>
</div>

