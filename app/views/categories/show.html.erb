<p id="notice"><%= notice %></p>

		<div class="panel panel-default">
		    <div class="panel-heading">
		  		<h3><%= @category.name %></h3>
		  		<h4>Number of startups: <%= @category.startups.count %></h4>
			</div>

			<div class="panel-body">
				<%= render partial: "startups/startups", locals: {startupable: @category} %>
			</div>
		<div class="center">
         
        </div>
			<div class="panel-footer">
				<% if policy(@category).update? %>
				<%= link_to 'Edit', edit_category_path(@category)  %> |
				<% end %>

				<%= link_to 'Back', categories_path %>
			</div>

			
		</div>
	<% if user_signed_in? %>
		<%= render partial: "startups/form", locals: {startupable: @category} %>
	<% end %>
	<%= form_tag import_startups_path do %>
		<%= file_field_tag :file %>
		<%= submit_tag "Upload", class: "btn btn-default" %>
	<% end %>
